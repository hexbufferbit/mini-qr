{
    "name": "mini-qr/mini-qr-php",
    "description": "PHP port of Mini QR - A library for generating QR codes with data encoding utilities",
    "type": "library",
    "license": "GPL-3.0-or-later",
    "authors": [
        {
            "name": "Mini QR Contributors"
        }
    ],
    "require": {
        "php": ">=7.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5"
    },
    "autoload": {
        "psr-4": {
            "MiniQR\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "MiniQR\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-text"
    }
}
